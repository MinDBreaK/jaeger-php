    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-sockets": "*",
        "packaged/thrift": "0.13.1",
        "opentracing/opentracing": "^1.0"
    },
    "authors": [
        {
            "name": "jukylin",
            "email": "742161455@qq.com"
        },
        {
            "name": "mindbreak",
            "email": "antoine@dunn.tf"
        }
    ],
    "autoload": {
        "psr-4": {
